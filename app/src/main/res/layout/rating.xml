<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Red Square -->
        <RelativeLayout
            android:id="@+id/red_square"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#8C1C13">

            <!-- Text: Hatid-Sundo -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your driver"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/button_back_background"
                android:contentDescription="Back Button"
                android:src="@drawable/ic_back_arrow"
                android:padding="8dp"
                android:paddingStart="20dp" />
        </RelativeLayout>

        <!--        Image of Driver-->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:src="@drawable/img_driver"/>

        <!--        Text: Please Rate Andrey-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Rate Andrey"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <!--        Rating Bar-->
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0"/>

        <EditText
            android:layout_width="299dp"
            android:layout_height="155dp"
            android:background="@drawable/background_rating_comment"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:hint="Leave a comment"
            android:textSize="14sp"
            android:padding="16dp"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:imeOptions="actionDone"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your feedback will help us provide you with only the best drivers."
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textSize="13sp"/>

    </LinearLayout>

</ScrollView>