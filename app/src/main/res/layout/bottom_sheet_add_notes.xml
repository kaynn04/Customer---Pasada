<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Title -->
    <TextView
        android:id="@+id/add_notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Notes for Your Driver"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="start" />

    <!-- Input Field for Notes -->
    <EditText
        android:id="@+id/notes_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter your notes here"
        android:padding="12dp"
        android:background="@drawable/rounded_edit_text"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:textColor="@color/black"/>

    <!-- Save Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:background="@drawable/button_background_redbg"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
